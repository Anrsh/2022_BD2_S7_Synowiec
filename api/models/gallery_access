const { Sequelize, DataTypes } = require('sequelize');
require('dotenv').config()


const sequelize = new Sequelize(process.env.PGLINK);


const Gallery_Access = sequelize.define('Gallery_Access', {
    user: {
        type: DataTypes.INTEGER,
        allowNull: false,
        autoIncrement: true,
        References:{
            model: Users,
            key: 'id'
        }
    },
    gallery: {
        type: DataTypes.INTEGER,
        allowNull: false,
        autoIncrement: true,
        References:{
            model: Gallery,
            key: 'id'
        }
    }

}, {
    timestamps: false
});


async function test() {
    try {
      const users = await Gallery_Access.findAll()
        console.log("All users:", JSON.stringify(users, null, 2));
    } catch (e) {
        console.error(e);
    }
}
test();